{
  "name": "wedding-project",
  "private": true,
  "version": "0.1.0",
  "description": "Simple static wedding info site",
  "scripts": {
    "dev": "start /B npm run watch:css && npm run serve",
    "serve": "live-server --port=3000 --open=index.html --watch=index.html,style.css,script.js,custom.css",
    "preview": "docker build -t wedding-site . && docker run --rm -p 8080:8080 wedding-site",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./style.css --minify",
    "watch:css": "tailwindcss -i ./src/tailwind.css -o ./style.css --watch"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.41",
    "autoprefixer": "^10.4.20"
  }
}
